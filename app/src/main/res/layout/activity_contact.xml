<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#660000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wood1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back_button"
            android:id="@+id/back2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textSize="30dp"
            android:text="Contact Us"
            android:gravity="center"
            android:textColor="#b30000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Email ID: foodytells@gmail.com"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Phone Number: xxx-xxx-xxxx"
            android:textSize="18dp"
            android:padding="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="(Feel free to email us your feed back on our email id)"
            android:layout_gravity="center"/>


    </LinearLayout>


</LinearLayout>